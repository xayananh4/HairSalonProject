@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details Page:</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>@Html.DisplayNameFor(model => model.Detail): @Html.DisplayFor(model => model.Detail)<h3>

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added to this stylist.</h3>
} 
else
{
  <h3>clients for this stylist:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
    
    }
  </ul>
}
<p>@Html.ActionLink("Add a client to this stylist", "Create","Clients")</p>
<p>@Html.ActionLink("Back to list of stylists", "Index")</p>