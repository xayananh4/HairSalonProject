@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Detail)
  @Html.TextBoxFor(model => model.Detail)
  <br>
  <input type="submit" value="Add this new stylist" />
}
<p>@Html.ActionLink("Show all the stylists", "Index")</p>